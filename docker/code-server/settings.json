{
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": false,
    "editor.folding": false,
    "editor.renderLineHighlight": "line",
    "editor.fontSize": 13,
    "workbench.colorTheme": "Default Dark+",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#37373d"
    },
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.enableExperiments": false,
    "update.showReleaseNotes": false,
    "update.mode": "none",
    "explorer.openEditors.visible": 0,
    "breadcrumbs.enabled": false,
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,
    "php.suggest.basic": false,
    "git.enabled": true,
    "[php]": { "editor.defaultFormatter": "fterrag.vscode-php-cs-fixer" },
    "files.exclude": {
        ".bash*": true,
        ".buildpath": true,
        ".gitignore": true,
        ".local": true,
        ".project": true,
        ".settings": true
    },
    "terminal.integrated.defaultProfile.linux": "/bin/bash",
    "vscode-php-cs-fixer.toolPath": "/config/.composer/vendor/bin/php-cs-fixer",
    "vscode-php-cs-fixer.config": "/var/www/phpcsfixer.conf",
    "vscode-php-cs-fixer.fixOnSave": false,
    "psalm.psalmScriptPath": "/config/.composer/vendor/bin/psalm-language-server",
    "psalm.hideStatusMessageWhenRunning": true,
    "psalm.unusedVariableDetection": true
}
